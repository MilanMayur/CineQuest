<!DOCTYPE html>
<html>
    <head>
        <title><%= movie.movieName %> - Details</title>
        <link rel="stylesheet" type="text/css" href="/styles.css">
        <link rel="icon" href="/cinequest.png" type="image/png">
        <div id="css-test" style="display: none;"></div>
        <script>
            if(localStorage.getItem('darkMode') === 'true'){
              document.documentElement.classList.add('dark-mode');
            }
        </script>
    </head>
    <body>
        <div class="container">

            <!-- Logo Title Profile -->
            <div class="header">
                <div class="logo">
                    <a href="/movies">
                        <img src="/cinequest.png" 
                            alt="cinequest_logo">
                    </a>
                </div>
                <div class="text">
                    <h1>CineQuest</h1>
                    <h4>Movies Beyond Imagination</h4>
                </div>
                <button id="darkModeToggle" class="dark-mode-button">üåô</button>

                <!-- Login/Signup -->
                <div class="auth-button">
                    <% if(user){ %>
                        <div class="profile-dropdown">
                            <div class="profile-header">
                                <img src="/user_icon.png" alt="User Icon" class="user-icon">
                                <span><%= user.username %></span>
                                <i class="arrow-down"></i>
                            </div>
                            <div class="dropdown-content">
                                <a href="/profile">Profile Settings</a>
                                <a href="/favorites">Favorites</a>
                                <a href="/my-reviews">My Reviews</a>
                                <a href="/logout">Logout</a>
                            </div>
                        </div>
                    <% } 
                    else{ %>
                        <form action="/login" method="GET" style="display: inline;">
                            <button type="submit" class="login-button">Login / Signup</button>
                        </form>
                    <% } %>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="search-box">
                <a href="/movies" class="home-button">Home</a>
                <form action="/search" 
                        method="GET" 
                        class="movie-search-bar" 
                        onsubmit="return validateSearchForm()">
                    <input type="text" 
                            id="searchQuery"
                            name="query" 
                            placeholder="Search by title, actor, genre...">
                    <button type="submit">Search</button>
                </form>
            </div>

            <!-- Movie Details -->
            <div class="movie-details-full">
                <img src="<%= movie.image.startsWith('http') ? movie.image : '/image_not_found.png' %>" 
                    alt="<%= movie.movieName %>">
                <h1><%= movie.movieName %></h1>

                <!-- Add to fav -->
                <% if (user) { %>
                    <form id="favForm" style="margin: 5px 0;">
                        <input type="hidden" 
                                name="movieId" 
                                value="<%= movie._id.toString() %>">
                        <input type="hidden" id="actionType" name="actionType" 
                                value="<%= alreadyFavorited ? 'remove' : 'add' %>">
                        <% if(alreadyFavorited){ %>
                            <button type="submit" id="favButton" 
                                class="favorites-button">‚úÖ Remove from Favorites
                            </button>
                        <% } 
                        else{ %>
                            <button type="submit" id="favButton" 
                                class="favorites-button">‚≠ê Add to Favorites
                            </button>
                        <% } %>
                    </form>
                <% } %>

                <!-- Movie info -->
                <div class="movie-info">
                    <p><strong>Language:</strong> <%= movie.language %></p>
                    <p><strong>Release Date:</strong> <%= movie.releaseDate %></p>
                    <p><strong>Actors:</strong> <%= movie.leadActors %></p>
                    <p><strong>Director:</strong> <%= movie.director %></p>
                    <p><strong>Genre:</strong> <%= movie.genre %></p>
                    <p><strong>IMDB Rating:</strong> <%= movie.imdbRating %></p>
                    <p><strong>Public Rating:</strong> <%= movie.publicRating %></p>
                </div>
                <div class="movie-description">
                    <label><strong>Description:</strong></label>
                    <p><%= movie.description %></p>
                </div>

                <!-- User review form -->
                <% if(user){ %>
                    <form action="/movies/<%= movie._id %>/review" method="POST" class="review-form" autocomplete="off">
                        <label for="rating"> Your Rating:</label>
                        <div class="star-rating">
                            <input type="hidden" name="rating" id="ratingInput" value="0" autocomplete="off">
                            <button type="button" class="star" data-value="1">‚òÖ</button>
                            <button type="button" class="star" data-value="2">‚òÖ</button>
                            <button type="button" class="star" data-value="3">‚òÖ</button>
                            <button type="button" class="star" data-value="4">‚òÖ</button>
                            <button type="button" class="star" data-value="5">‚òÖ</button>
                        </div>
                        <label for="reviewText">Your Review:</label>
                        <textarea name="review" id="reviewText" rows="5" maxlength="500" required autocomplete="off"></textarea>
                        <div class="submit-container">
                            <button type="submit">Submit Review</button>
                        </div>
                    </form>
                <% } %>

                <!-- Messages -->
                <div id="messages">
                    <% if(successMessage){ %>
                        <div class="success-message"><%= successMessage %></div>
                    <% } %>
                    <% if(errorMessage){ %>
                        <div class="error-message"><%= errorMessage %></div>
                    <% } %>
    
                    <% if(successMessage || errorMessage){ %>
                    <script>
                        window.history.replaceState(null, '', window.location.pathname);
                    </script>
                    <% } %>
                </div>
                
                <!-- Reviews display -->
                <div class="reviews-section">
                    <h3>User Reviews</h3>
                    <% movie.reviews?.forEach(function(review, index){ %>
                        <div class="review">
                            <div class="review-header">
                                <div class="review-user">
                                    <strong><%= review.username %></strong> - <%= review.rating %>/5‚òÖ
                                </div>
                                <div class="review-time">
                                    <small><%= new Date(review.date).toLocaleString() %></small>
                                    <% if (user && user.username === review.username) { %>
                                        <form action="/movies/<%= movie._id %>/review/delete" method="POST" class="delete-review-form">
                                            <input type="hidden" name="reviewIndex" value="<%= index %>">
                                            <button type="submit" class="delete-button" title="Delete Review">üóëÔ∏è</button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                            <p><%= review.comment %></p>
                        </div>
                    <% }) %>
                </div>
            </div>
            <button class="back-button" onclick="window.location.href='<%= backUrl %>'">‚Üê Back</button>
        </div>
        <script type="module"> 
            import { toggleDarkMode, setupStarRating, autoHideMessages, 
                    setupFavoritesButton, validateSearchForm, goBack, 
                    checkAndReloadCSS } from "/functions.js";
            
            toggleDarkMode();
            setupStarRating();
            autoHideMessages();
            checkAndReloadCSS();
            setupFavoritesButton();

            window.validateSearchForm = validateSearchForm;
            window.goBack = goBack;
        </script>
    </body>
</html>
